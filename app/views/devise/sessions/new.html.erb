<head>
  <style>
    body {background-color: #9CEC5B;}
  </style>
</head>
<div class = "sign-in-center">
  <%=image_tag 'logo_small.png', :class => "logo"%>

<div class = "form-sign-in">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-outline-secondary" %>
      </div>
      <br>
      <div class="actions">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
