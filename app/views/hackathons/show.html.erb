<div class ="center">
<p id="notice"><%= notice %></p>
<% team_member = @team_member %>
<p>
  <img src="<%= @hackathon.avatar_url %>">
</p>

<p>
  <strong>Name:</strong>
  <%= @hackathon.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @hackathon.description %>
</p>

<p>
  <strong>Reward:</strong>
  <%= @hackathon.reward %>
</p>

<p>
  <strong>Max team count:</strong>
  <%= @hackathon.max_team_count %>
</p>

<p>
  <strong>Date end:</strong>
  <%= @hackathon.date_end %>
</p>

<p>
  <strong>Team Name:</strong>
</p>
<% @hackathon_teams.each do |team| %>
  <% team_members = team.team_members %>
 <p> <%= team.name %> </p>
   <br />
   <% if team_members.where(role: 'hipster').empty? == false %>
     <p>  <%=image_tag('hipster.png', class: "icon")%> The Hipster is: <%= team_members.where(role: 'hipster').first.profile.name %> !</p>
     <br />
     <% else %>
       Hipster
       <%= render 'team_form', team_member: team_member, team_id: team.id, hackathons_id: @hackathon.id, role: 'hipster' %>
   <% end %>

   <% if team_members.where(role: 'hacker').empty? == false %>
   <p> <%=image_tag('teacher_blackboard.png', class: "icon")%> The Hacker is: <%= team_members.where(role: 'hacker').first.profile.name %> !</p>
   <br />
  <% else %>
       Hacker
       <%= render 'team_form', team_member: team_member, team_id: team.id, hackathons_id: @hackathon.id, role: 'hacker' %>
   <% end %>

   <% if team_members.where(role: 'hustler').empty? == false %>
   <p> <%=image_tag('devil.png', class: "icon")%> The Hustler is: <%= team_members.where(role: 'hustler').first.profile.name %> !</p>
   <br />
     <% else %>
      Hustler
      <%= render 'team_form', team_member: team_member, team_id: team.id, hackathons_id: @hackathon.id, role: 'hustler' %>
   <% end %>
   <% end %>
  <br/>

  <%= render 'map' %>

  <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyARnE2Kn50_ZU2esdEqBcD9De5jOc8EeQs&callback=initMap">
  </script>

  <%= link_to 'Back', hackathons_path %>
  <!--  link_to 'Edit', edit_hackathon_path(@hackathon[:id]) -->
  <%= link_to 'Back', hackathons_path %>
 </div>
</div>
